<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <!-- If you want specific levels for certain classes, add them here -->
        <Logger name="tn.esprit.spring.controllers.RegistrationRestController" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="tn.esprit.spring.services.RegistrationServicesImpl" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
